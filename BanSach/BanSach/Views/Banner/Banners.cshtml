@model IEnumerable<BanSach.Models.Banner>

<div class="container">
    <div class="row justify-content-start">
        @foreach (var banner in Model)
        {
            <div class="col-6 col-sm-6 col-md-3 col-lg-3 col-xl-3 mt-1 d-none d-lg-block">
                <div class="card border-0 bg-dark" id="banner">
                    <!-- Kiểm tra nếu có link trong banner -->
                    <a href="@banner.Link">
                        <img src="~/assets/images/banners/@banner.HinhAnh" class="d-block rounded-1 img-fluid fixed-size-img" alt="@banner.MoTa">
                    </a>
                </div>
            </div>
        }
    </div>
</div>
<style>
    .fixed-size-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        padding: 0;
        margin: 0;
    }
</style>
