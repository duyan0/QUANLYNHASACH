@{
    ViewBag.Title = "Đăng nhập thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card glass-card shadow-lg border-0">
                <div class="card-header gradient-header text-white text-center">
                    <h3 class="text-white fw-bold">
                        <i class="fas fa-smile-beam"></i> Chào mừng, @Session["TenKH"]!
                    </h3>
                </div>
                <div class="card-body text-center">
                    <p class="lead mb-4 text-white">Bạn đã đăng nhập thành công! Hãy tiếp tục mua sắm và trải nghiệm cùng chúng tôi.</p>
                    <div class="d-flex justify-content-center flex-wrap gap-4 mt-4">
                        <a href="@Url.Action("ProductList", "SanPhams")" class="btnn btn-lg btnn-custom-primary fw-bold shadow-sm rounded-pill d-flex align-items-center gap-2">
                            <i class="fas fa-shopping-cart"></i> Tiếp tục mua hàng
                        </a>
                        <a href="@Url.Action("ShowCart", "ShoppingCart")" class="btnn btn-lg btnn-custom-success fw-bold shadow-sm rounded-pill d-flex align-items-center gap-2">
                            <i class="fas fa-shopping-bag"></i> Đi đến giỏ hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Container chỉnh độ rộng */
    .container {
        max-width: 900px;
    }

    /* Thiết kế thẻ card với hiệu ứng glassmorphism */
    .glass-card {
        border-radius: 25px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    /* Thiết kế header với hiệu ứng gradient */
    .gradient-header {
        padding: 25px;
        border-bottom: none;
        
        border-top-left-radius: 25px;
        border-top-right-radius: 25px;
    }

    /* Thiết kế phần body của thẻ card */
    .card-body {
        padding: 40px 30px;
    }

    /* Hiệu ứng nút với màu sắc tùy chỉnh */
    .btnn-custom-primary {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        color: #fff;
        border: none;
        padding: 15px 25px;
    }

    .btnn-custom-success {
        background: linear-gradient(135deg, #28a745, #85e085);
        color: #fff;
        border: none;
        padding: 15px 25px;
    }

    /* Hiệu ứng hover cho các nút */
    .btnn:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .btnn:active {
        transform: translateY(0);
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
    }

    .btn i {
        font-size: 1.2rem;
    }

    /* Thiết kế nội dung văn bản và bố cục */
    .lead {
        font-size: 1.4rem;
        color: #555;
    }

    /* Khoảng cách giữa các nút */
    .d-flex.gap-4 {
        gap: 1.5rem;
    }
</style>

