@model BanSach.Models.VerifyOtpViewModel

@{
    ViewBag.Title = "Xác nhận mã OTP";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded">
                <div class="card-header text-center bg-success-subtle text-white rounded-top">
                    <h4><strong>Xác nhận mã OTP</strong></h4>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("VerifyOtp", "LoginUser")">
                        <input type="hidden" name="UserId" value="@Model.UserId" />

                        <div class="form-group mb-3">
                            <label for="EnteredOtp">Mã OTP</label>
                            <input type="text" name="EnteredOtp" id="EnteredOtp" class="form-control form-control-lg" maxlength="4" placeholder="Tối đa 4 số" required />
                            <small class="form-text text-muted">Nhập mã OTP được gửi đến email của bạn.</small>
                        </div>

                        <button type="submit" class="btn btn-success rounded-sm btn-block btn-lg">Xác nhận</button>
                    </form>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger rounded-sm mt-3">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success rounded-sm mt-3">
                            @ViewBag.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
