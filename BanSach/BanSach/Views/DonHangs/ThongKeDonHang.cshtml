@model BanSach.Models.ThongKeDonHangViewModel

@{
    ViewBag.Title = "Thống Kê Đơn Hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Thống Kê Đơn Hàng</h2>

    <div class="row g-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4 col-sm-6">
                            <div class="card bg-primary text-white h-100">
                                <div class="card-body text-center">
                                    <h5 class="card-title fw-bold"><i class="fas fa-shopping-cart me-2"></i>Tổng số đơn hàng</h5>
                                    <p class="fs-4 mb-0">@Model.TongSoDonHang</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="card bg-warning text-dark h-100">
                                <div class="card-body text-center">
                                    <h5 class="card-title fw-bold"><i class="fas fa-hourglass-start me-2"></i>Chờ xử lý</h5>
                                    <p class="fs-4 mb-0">@Model.DonHangChoXuLy</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="card bg-info text-white h-100">
                                <div class="card-body text-center">
                                    <h5 class="card-title fw-bold"><i class="fas fa-check-circle me-2"></i>Đã xác nhận</h5>
                                    <p class="fs-4 mb-0">@Model.DonHangDaXacNhan</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="card bg-success text-white h-100">
                                <div class="card-body text-center">
                                    <h5 class="card-title fw-bold"><i class="fas fa-truck me-2"></i>Đã nhận hàng</h5>
                                    <p class="fs-4 mb-0">@Model.DonHangDaNhanHang</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="card bg-danger text-white h-100">
                                <div class="card-body text-center">
                                    <h5 class="card-title fw-bold"><i class="fas fa-times-circle me-2"></i>Đã hủy</h5>
                                    <p class="fs-4 mb-0">@Model.DonHangDaHuy</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="card bg-dark text-white h-100">
                                <div class="card-body text-center">
                                    <h5 class="card-title fw-bold"><i class="fas fa-money-bill-wave me-2"></i>Tổng doanh thu</h5>
                                    <p class="fs-4 mb-0">@Model.TongDoanhThu.ToString("N0") VNĐ</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-outline-secondary" })
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-1px);
        }
</style>