@model BanSach.Models.SanPham

@{
    ViewBag.Title = "Chi tiết sản phẩm" + Model.IDsp;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <h3 class="text-center font-weight-bold">Chi tiết thông tin sản phẩm</h3>
    <hr />

    <div class="row">
        <!-- Cột bên trái -->
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Tên sách:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TenSP)</dd>

                <dt class="col-sm-4">Mô tả:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MoTa)</dd>

                <dt class="col-sm-4">Giá bán:</dt>
                <dd class="col-sm-8 text-danger font-weight-bold">@string.Format("{0:N0} VND", Model.GiaBan)</dd>

                <dt class="col-sm-4">Hình ảnh:</dt>
                <dd class="col-sm-8">
                    <img src="~/assets/images/products/@Model.HinhAnh" class="img-fluid rounded-1" width="50" alt="Hình ảnh sách">
                </dd>

                <dt class="col-sm-4">Tác giả:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TacGia.TenTG)</dd>

                <dt class="col-sm-4">Số lượng:</dt>
                <dd class="col-sm-8">
                    @if (Model.SoLuong <= 0)
                    {
                        <span class="text-danger font-weight-bold">Cảnh cáo số lượng: @Math.Abs(Model.SoLuong)</span>
                    }
                    else
                    {
                        <span class="text-success">@Html.DisplayFor(model => model.SoLuong)</span>
                    }
                </dd>
            </dl>
        </div>

        <!-- Cột bên phải -->
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Nhà xuất bản</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NhaXuatBan.Tennxb)</dd>

                <dt class="col-sm-4">Giá khuyến mãi:</dt>
                <dd class="col-sm-8 text-success">@Html.DisplayFor(model => model.KhuyenMai.MucGiamGia)%</dd>

                

                <dt class="col-sm-4">Thể loại:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TheLoai.TenTheLoai)</dd>

                <dt class="col-sm-4">Trạng thái sách:</dt>
                <dd class="col-sm-8 font-weight-bold">
                    @if (Model.TrangThaiSach == "Còn hàng")
                    {
                        <span class="badge text-bg-success">@Html.DisplayFor(model => model.TrangThaiSach)</span>
                    }
                    else
                    {
                        <span class="badge text-bg-danger">@Html.DisplayFor(model => model.TrangThaiSach)</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4 ">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.IDsp }, new { @class = "btn btn-warning me-2 rounded-sm mx-1" }) 
        @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-outline-success me-2 rounded-sm mx-1" }) 
        @Html.ActionLink("Xoá", "Delete", new { id = Model.IDsp }, new { @class = "btn btn-danger rounded-sm mx-1" })
    </div>
</div>
