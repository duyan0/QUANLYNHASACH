@model BanSach.Models.KhachHang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .card-rounded {
        border-radius: 10px;
    }

    .btn-rounded {
        border-radius: 5px;
    }

    .container-custom {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-custom {
        max-width: 600px;
        width: 100%;
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header-custom {
        background-color: #dc3545;
        color: #fff;
        padding: 1.5rem;
        text-align: center;
    }

    .card-body-custom {
        padding: 2rem;
    }

    .dl-custom dt {
        font-weight: bold;
        display:flex;
        justify-content:left;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .btn-secondary {
        border: none;
    }

    .btn:hover {
        opacity: 0.9;
    }
</style>

<div class="container-custom">
    <div class="card shadow-lg card-custom">
        <div class="card-header-custom">
            <h2 class="text-light">Xoá thông tin khách hàng</h2>
        </div>
        <div class="card-body card-body-custom">
            <div class="table-borderless justify-content-center">
                <dl class="row text-start dl-custom">
                    <dt class="col-sm-4">Tên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TenKH)</dd>

                    <dt class="col-sm-4">Số điện thoại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SoDT)</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4">Tài khoản</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TKhoan)</dd>

                    <dt class="col-sm-4">Mật khẩu</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MKhau)</dd>
                </dl>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-center mt-4">
                    <input type="submit" value="Xoá" class="btn btn-danger btn-rounded px-4" />
                    @Html.ActionLink("Quay về danh sách khách hàng", "Index", null, new { @class = "btn btn-secondary btn-rounded ms-2 px-4" })
                </div>
            }
        </div>
    </div>
</div>