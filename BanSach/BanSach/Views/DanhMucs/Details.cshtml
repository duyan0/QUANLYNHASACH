@model BanSach.Models.DanhMuc

@{
    ViewBag.Title = "Chi tiết danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center font-weight-bold">Chi tiết danh mục</h2>
    <hr />

    <div class="table-responsive">
        <table class="table table-bordered ">
            <tbody>
                <tr>
                    <td class="font-weight-bold" style="width: 25%;">Danh mục</td>
                    <td>@Html.DisplayFor(model => model.DanhMuc1)</td>
                </tr>
                <tr>
                    <td class="font-weight-bold">Thể loại</td>
                    <td>@Html.DisplayFor(model => model.TheLoai)</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.ID }, new { @class = "btn btn-warning me-2 rounded-sm " }) |
        @Html.ActionLink("Quay về ", "Index", null, new { @class = "btn btn-secondary me-2 rounded-sm " }) |
        @Html.ActionLink("Xoá", "Delete", new { id = Model.ID }, new { @class = "btn btn-danger rounded-sm" })
    </div>
</div>
