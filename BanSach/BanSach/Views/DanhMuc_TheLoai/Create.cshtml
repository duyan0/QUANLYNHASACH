@model BanSach.Models.DanhMuc_TheLoai

@{
    ViewBag.Title = "Thêm Danh Mục - Thể Loại";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Thêm Danh Mục - Thể Loại Mới</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    <label for="TheLoai_ID" class="form-label fw-bold">Thể loại</label>
                    @Html.DropDownList("TheLoai_ID", (SelectList)ViewBag.TL, "Chọn thể loại", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.TheLoai_ID, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label for="DanhMuc_ID" class="form-label fw-bold">Danh mục</label>
                    @Html.DropDownList("DanhMuc_ID", (SelectList)ViewBag.DM, "Chọn danh mục", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.DanhMuc_ID, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label for="HinhAnh" class="form-label fw-bold">Hình ảnh</label>
                    <input type="file" name="HinhAnh" id="HinhAnh" class="form-control" />
                    @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Thêm mới</button>
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}   