@model BanSach.Models.DanhMuc_TheLoai

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Xóa Danh Mục - Thể Loại</h2>

    <div class="alert alert-warning" role="alert">
        Bạn có chắc chắn muốn xóa mục này không?
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Hình ảnh</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="~/assets/images/banners/@Model.HinhAnh" alt="Hình ảnh" class="img-fluid rounded-1" style="max-height: 100px;" />
                    }
                    else
                    {
                        <span>Không có hình ảnh</span>
                    }
                </dd>

                <dt class="col-sm-3">Danh mục</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)</dd>

                <dt class="col-sm-3">Thể loại</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TheLoai.TenTheLoai)</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="mt-3">
            <button type="submit" class="btn btn-danger me-2">Xóa</button>
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>