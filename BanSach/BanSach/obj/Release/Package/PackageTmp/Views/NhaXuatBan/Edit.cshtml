@model BanSach.Models.NhaXuatBan

@{
    ViewBag.Title = "Chỉnh sửa NXB " + Model.IDnxb; // Cập nhật tiêu đề
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center font-weight-bold">Chỉnh Sửa Nhà Xuất Bản</h2> <!-- Tiêu đề chính -->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDnxb)

    <div class="form-group row">
        @Html.LabelFor(model => model.Tennxb, "Tên nhà xuất bản", htmlAttributes: new { @class = "control-label col-md-2", title = "Tên NXB" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tennxb, new { htmlAttributes = new { @class = "form-control rounded" } }) <!-- Bo góc cho trường nhập -->
            @Html.ValidationMessageFor(model => model.Tennxb, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.DiaChi, "Địa chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control rounded" } }) <!-- Bo góc cho trường nhập -->
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.SoDienThoai, "Hotline", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control rounded" } }) <!-- Bo góc cho trường nhập -->
                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control rounded" } }) <!-- Bo góc cho trường nhập -->
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12 text-center">
                <!-- Căn giữa bằng cách sử dụng col-md-12 -->
                <input type="submit" value="Lưu" class="btn btn-success rounded" style="width: 150px;" /> <!-- Nút lưu với màu chính, bo góc và chiều rộng 150px -->
            </div>
        </div>

    </div>
}

<div class="text-center">
    @Html.ActionLink("Trở Về Danh Sách", "Index", null, new { @class = "btn btn-secondary rounded" }) <!-- Nút trở về với bo góc -->
</div>
