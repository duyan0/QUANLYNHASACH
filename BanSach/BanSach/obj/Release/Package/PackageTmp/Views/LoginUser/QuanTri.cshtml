@{
    ViewBag.Title = "Trang quản lý";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<div class="container mt-2 ">
    <div class="quanly p-4 text-center">
        <h1 class="display-5 text-success mb-4"><i class="fas fa-user-shield"></i> Xin chào, @Session["TenQly"]</h1>
        <h4 class="text-black mb-5">Chúc bạn một ngày vui vẻ nhé!</h4>
        <div class="row justify-content-center mb-4">
            <div class="col-md-4 mb-3">
                <a href="~/SanPhams/TrangChu" class="btn btn-outline-dark rounded-sm btn-lg w-100 shadow-sm">
                    <i class="fas fa-home"></i> Đi đến trang chủ
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="#" class="btn btn-outline-success rounded-sm btn-lg w-100 shadow-sm">
                    <i class="fas fa-chart-line"></i> Xem báo cáo
                </a>
            </div>
        </div>
    </div>

    <div class="admin-links mt-1">
        <div class="row">
            <div class="col-md-3 col-sm-6 mb-4">
                @if (Session["Vaitro"] != null && string.Equals(Session["Vaitro"].ToString().Trim(), "Admin", StringComparison.OrdinalIgnoreCase))
                {
                    <!-- Người dùng có vai trò Admin thì cho phép click vào -->
                    <a href="~/Admins/Index" class="text-decoration-none d-block p-3 border rounded shadow-sm text-center bg-light">
                        <i class="fas fa-users-cog fa-2x text-success mb-2"></i>
                        <div class="font-weight-bold text-dark">Quản lý nhân sự</div>
                    </a>
                }
                else
                {
                    <!-- Người dùng không phải Admin thì chỉ hiển thị mà không cho phép click -->
                    <div class="d-block p-3 border rounded shadow-sm text-center bg-light" style="cursor: not-allowed;">
                        <i class="fas fa-users-cog fa-2x text-black mb-2"></i>
                        <div class="font-weight-bold text-muted">Quản lý nhân sự (Chỉ dành cho Admin)</div>
                    </div>
                }
            </div>


            <div class="col-md-3 col-sm-6 mb-4">
                <a href="~/KhachHangs/Index" class="text-decoration-none d-block p-3 border rounded shadow-sm text-center bg-light">
                    <i class="fas fa-user-friends fa-2x text-success mb-2"></i>
                    <div class="font-weight-bold text-dark">Quản lý khách hàng</div>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <a href="~/SanPhams/Index" class="text-decoration-none d-block p-3 border rounded shadow-sm text-center bg-light">
                    <i class="fas fa-book fa-2x text-success mb-2"></i>
                    <div class="font-weight-bold text-dark">Quản lý sách</div>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <a href="~/DanhMucs/Index" class="text-decoration-none d-block p-3 border rounded shadow-sm text-center bg-light">
                    <i class="fas fa-tags fa-2x text-success mb-2"></i>
                    <div class="font-weight-bold text-dark">Quản lý thể loại sách</div>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <a href="~/TacGia/Index" class="text-decoration-none d-block p-3 border rounded shadow-sm text-center bg-light">
                    <i class="fas fa-pen-fancy fa-2x text-success mb-2"></i>
                    <div class="font-weight-bold text-dark">Quản lý Tác giả</div>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <a href="~/NhaXuatBan/Index" class="text-decoration-none d-block p-3 border rounded shadow-sm text-center bg-light">
                    <i class="fas fa-building fa-2x text-success mb-2"></i>
                    <div class="font-weight-bold text-dark">Quản lý Nhà xuất bản</div>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <a href="~/KhuyenMai/Index" class="text-decoration-none d-block p-3 border rounded shadow-sm text-center bg-light">
                    <i class="fas fa-percent fa-2x text-success mb-2"></i>
                    <div class="font-weight-bold text-dark">Quản lý khuyến mãi</div>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <a href="~/DonHangs/Index" class="text-decoration-none d-block p-3 border rounded shadow-sm text-center bg-light">
                    <i class="fas fa-shopping-cart fa-2x text-success mb-2"></i>
                    <div class="font-weight-bold text-dark">Quản lý đơn hàng</div>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <a href="~/DonHangCTs/Index" class="text-decoration-none d-block p-3 border rounded shadow-sm text-center bg-light">
                    <i class="fas fa-info-circle fa-2x text-success mb-2"></i>
                    <div class="font-weight-bold text-dark">Chi tiết đơn hàng</div>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <a href="~/Banner/Index" class="text-decoration-none d-block p-3 border rounded shadow-sm text-center bg-light">
                    <i class="fas fa-info-circle fa-2x text-success mb-2"></i>
                    <div class="font-weight-bold text-dark">Banner</div>
                </a>
            </div>
        </div>
    </div>
</div>
