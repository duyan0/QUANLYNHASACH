@model BanSach.Models.DanhMuc

@{
    ViewBag.Title = "Thêm Danh Mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-lg">
        <div class="card-header text-center text-white ">
            <h2 class="fw-semibold mb-0 text-dark">Thêm Danh Mục</h2>
        </div>
        <div class="card-body p-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.HinhAnh_DM, "Hình ảnh", htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                    <div class="col-md-9">
                        <input type="file" name="HinhAnh_DM" class="form-control rounded-sm" placeholder="Hình ảnh" />
                        @Html.ValidationMessageFor(model => model.HinhAnh_DM, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.DanhMuc1, "Tên Danh Mục", htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.DanhMuc1, new { htmlAttributes = new { @class = "form-control rounded-sm", placeholder = "Nhập tên danh mục" } })
                        @Html.ValidationMessageFor(model => model.DanhMuc1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.TheLoai, "Thể Loại", htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.TheLoai, new { htmlAttributes = new { @class = "form-control rounded-sm", placeholder = "Nhập thể loại" } })
                        @Html.ValidationMessageFor(model => model.TheLoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row text-center mt-4">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success btn-lg rounded-sm px-3">Lưu</button>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer text-center">
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary rounded-sm" })
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
