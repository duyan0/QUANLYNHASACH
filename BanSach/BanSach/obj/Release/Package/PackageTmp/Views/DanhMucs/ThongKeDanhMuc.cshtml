@model BanSach.Models.ThongKeDanhMucViewModel

@{
    ViewBag.Title = "Thống Kê Danh Mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4 text-center font-weight-bold text-dark">Thống Kê Danh Mục</h2>
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-dark">Tổng Số Danh Mục:</h5>
                    <p class="card-text">
                        <button class="btn btn-success rounded-sm w-100" disabled>@Model.TotalCategories</button>
                    </p>

                    <h5 class="card-title text-dark">Tổng Số Sách Trong Tất Cả Các Danh Mục:</h5>
                    <p class="card-text">
                        <button class="btn btn-success rounded-sm w-100" disabled>@Model.TotalBooks</button>
                    </p>

                    <h5 class="card-title text-dark">Số Lượng Sách Theo Từng Danh Mục:</h5>
                    <div class="list-group">
                        @foreach (var item in Model.BooksPerCategory)
                        {
                            <div class="list-group-item list-group-item-action rounded-sm shadow-sm mb-2">
                                <strong class="text-dark">@item.DanhMuc</strong>
                                <span class="badge badge-success float-right">@item.SoLuongSach sách</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
