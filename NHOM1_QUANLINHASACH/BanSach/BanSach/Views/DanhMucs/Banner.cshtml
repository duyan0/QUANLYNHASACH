@model IEnumerable<BanSach.Models.DanhMuc_TheLoai>
@{
    var temp = new BanSach.Models.DanhMuc_TheLoai();
    var processedCategories = new HashSet<string>();
}
<div class="row product-category-container overflow-x-auto row-cols-6">
    @foreach (var item in Model)
    {
        if (!processedCategories.Contains(item.DanhMuc.TenDanhMuc) && Session[item.DanhMuc.TenDanhMuc] == null)
        {
            processedCategories.Add(item.DanhMuc.TenDanhMuc);

            <div class="col-6 col-sm-6 col-md-2 col-lg-2 col-xl-2 mt-1">
                <div class="card border-0 bg-dark">
                    <a href="~/SanPhams/Productlist?category=@item.ID" class="text-decoration-none">
                        <img src="~/Content/img/Banner/@item.HinhAnh" class="d-block rounded-3 img-fluid" alt="@item.DanhMuc.TenDanhMuc">
                        <p class="text-white text-center mt-2" style="font-size: 14px;">@item.DanhMuc.TenDanhMuc</p>
                    </a>
                </div>
            </div>

        }
    }
</div>
